<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.client.HomeController"
            style="-fx-background-color: #121212;">

    <!-- Header -->
    <top>
        <VBox>
            <VBox style="-fx-background-color: #1DB954; -fx-padding: 20;">
                <Label text="Spotify Recommender"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Label text="Esplora migliaia di canzoni"
                       style="-fx-font-size: 14px; -fx-text-fill: #f0f0f0;">
                    <VBox.margin>
                        <Insets top="5"/>
                    </VBox.margin>
                </Label>
            </VBox>

            <!-- Navigation Bar -->
            <HBox spacing="15"
                  alignment="CENTER_LEFT"
                  style="-fx-background-color: #282828; -fx-padding: 15 30;">

                <Button text="🎵 Home"
                        style="-fx-background-color: #1DB954;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20;
                               -fx-cursor: hand;"/>

                <Button text="👥 Cerca Amici"
                        onAction="#handleGoToFriendsSearch"
                        style="-fx-background-color: #3498db;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20;
                               -fx-cursor: hand;"/>

                <Button text="📬 Richieste Amicizia"
                        onAction="#handleGoToFriendRequests"
                        style="-fx-background-color: #9b59b6;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20;
                               -fx-cursor: hand;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label fx:id="userEmailLabel"
                       style="-fx-text-fill: #b3b3b3; -fx-font-size: 12px;"/>

                <Button text="🚪 Logout"
                        onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20;
                               -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Search Bar -->
            <HBox spacing="10" alignment="CENTER"
                  style="-fx-background-color: #282828; -fx-background-radius: 25; -fx-padding: 10 20;">
                <TextField fx:id="searchField"
                           promptText="🔍 Cerca canzoni, artisti..."
                           prefWidth="400"
                           onAction="#handleSearch"
                           style="-fx-background-color: transparent;
                                 -fx-text-fill: white;
                                 -fx-prompt-text-fill: #b3b3b3;
                                 -fx-font-size: 14px;
                                 -fx-border-color: transparent;"/>
                <Button text="Cerca"
                        onAction="#handleSearch"
                        style="-fx-background-color: #1DB954;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;
                               -fx-padding: 8 20;
                               -fx-cursor: hand;"/>
            </HBox>

            <!-- Songs Table -->
            <TableView fx:id="songTable"
                       VBox.vgrow="ALWAYS"
                       style="-fx-background-color: #181818;
                             -fx-control-inner-background: #181818;
                             -fx-table-cell-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="nameColumn"
                                 text="🎵 Titolo"
                                 prefWidth="300"
                                 style="-fx-text-fill: white;"/>
                    <TableColumn fx:id="artistColumn"
                                 text="🎤 Artisti"
                                 prefWidth="250"
                                 style="-fx-text-fill: white;"/>
                    <TableColumn fx:id="popularityColumn"
                                 text="⭐ Popolarità"
                                 prefWidth="120"
                                 style="-fx-text-fill: white;"/>
                </columns>
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </TableView>

        </VBox>
    </center>

    <!-- Footer with Pagination -->
    <bottom>
        <HBox spacing="15"
              alignment="CENTER"
              style="-fx-background-color: #181818; -fx-padding: 20;">

            <Button fx:id="prevButton"
                    text="⬅ Precedente"
                    onAction="#handlePrevious"
                    style="-fx-background-color: #282828;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-background-radius: 20;
                           -fx-padding: 10 25;
                           -fx-cursor: hand;"/>

            <Label fx:id="pageLabel"
                   text="Pagina 1"
                   style="-fx-text-fill: white;
                          -fx-font-size: 14px;
                          -fx-font-weight: bold;
                          -fx-padding: 10 20;"/>

            <Button fx:id="nextButton"
                    text="Successiva ➡"
                    onAction="#handleNext"
                    style="-fx-background-color: #1DB954;
                           -fx-text-fill: white;
                           -fx-font-size: 13px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 10 25;
                           -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>
