<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.client.FriendsSearchController"
            style="-fx-background-color: #121212;">

    <top>
        <VBox style="-fx-background-color: #9b59b6; -fx-padding: 20;">
            <Label text="🔍 Cerca Amici"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Trova nuovi amici e gestisci la tua lista"
                   style="-fx-font-size: 14px; -fx-text-fill: #f0f0f0;">
                <VBox.margin>
                    <Insets top="5"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 30;">

            <!-- Search Section -->
            <!-- Search Section -->
            <VBox spacing="15" style="-fx-background-color: #282828; -fx-background-radius: 10; -fx-padding: 20;">
                <Label text="Cerca Utenti"
                       style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

                <HBox spacing="10">
                    <TextField fx:id="searchField"
                               promptText="Inserisci email..."
                               HBox.hgrow="ALWAYS"
                               style="-fx-background-color: #181818;
                         -fx-text-fill: white;
                         -fx-prompt-text-fill: #b3b3b3;
                         -fx-background-radius: 20;
                         -fx-padding: 10 15;
                         -fx-font-size: 14px;"/>

                    <Button text="🔍 Cerca"
                            onAction="#handleSearch"
                            style="-fx-background-color: #1DB954;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 20;
                       -fx-padding: 10 25;
                       -fx-cursor: hand;"/>

                    <Button text="📋 Mostra Tutti"
                            onAction="#handleLoadAllUsers"
                            style="-fx-background-color: #3498db;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 20;
                       -fx-padding: 10 25;
                       -fx-cursor: hand;"/>
                </HBox>

                <ListView fx:id="usersListView"
                          prefHeight="300"
                          style="-fx-background-color: #181818;
                   -fx-control-inner-background: #181818;
                   -fx-border-color: transparent;">
                    <VBox.margin>
                        <Insets top="10"/>
                    </VBox.margin>
                </ListView>
            </VBox>

            <!-- Friends Section -->
            <VBox spacing="15" style="-fx-background-color: #282828; -fx-background-radius: 10; -fx-padding: 20;"
                  VBox.vgrow="ALWAYS">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="I Tuoi Amici"
                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="🔄"
                            onAction="#handleRefreshFriends"
                            style="-fx-background-color: #1DB954;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 20;
                                   -fx-padding: 5 15;
                                   -fx-cursor: hand;"/>
                </HBox>

                <ListView fx:id="friendsListView"
                          VBox.vgrow="ALWAYS"
                          style="-fx-background-color: #181818;
                               -fx-control-inner-background: #181818;
                               -fx-border-color: transparent;"/>
            </VBox>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #181818; -fx-padding: 20;">
            <Button text="⬅ Torna alla Home"
                    onAction="#handleBack"
                    style="-fx-background-color: #282828;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 10 25;
                           -fx-cursor: hand;"/>
        </HBox>
    </bottom>

</BorderPane>
