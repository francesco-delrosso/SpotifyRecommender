<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.client.LoginController"
      spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <!-- Header -->
    <Label text="Spotify Recommender" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1DB954;">
        <padding>
            <Insets bottom="10"/>
        </padding>
    </Label>

    <!-- Connection Status -->
    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="statusLabel" text="Non connesso" style="-fx-text-fill: gray;"/>
        <Button fx:id="connectButton" text="Connetti" onAction="#handleConnect"
                style="-fx-background-color: #1DB954; -fx-text-fill: white;"/>
    </HBox>

    <Separator/>

    <!-- Login Pane -->
    <VBox fx:id="loginPane" spacing="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
        <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;">
            <padding>
                <Insets bottom="10"/>
            </padding>
        </Label>

        <TextField fx:id="loginEmail" promptText="Email" prefWidth="250">
            <font>
                <Font size="14"/>
            </font>
        </TextField>

        <PasswordField fx:id="loginPassword" promptText="Password" prefWidth="250">
            <font>
                <Font size="14"/>
            </font>
        </PasswordField>

        <Button text="Accedi" onAction="#handleLogin" prefWidth="250"
                style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;">
            <font>
                <Font size="14"/>
            </font>
        </Button>

        <Hyperlink text="Non hai un account? Registrati" onAction="#showRegisterPane"
                   style="-fx-text-fill: #1DB954;"/>
    </VBox>

    <!-- Register Pane -->
    <VBox fx:id="registerPane" spacing="10" alignment="CENTER" visible="false" managed="false"
          style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;">
        <Label text="Registrazione" style="-fx-font-size: 18px; -fx-font-weight: bold;">
            <padding>
                <Insets bottom="10"/>
            </padding>
        </Label>

        <TextField fx:id="registerEmail" promptText="Email" prefWidth="250">
            <font>
                <Font size="14"/>
            </font>
        </TextField>

        <PasswordField fx:id="registerPassword" promptText="Password" prefWidth="250">
            <font>
                <Font size="14"/>
            </font>
        </PasswordField>

        <Button text="Registrati" onAction="#handleRegister" prefWidth="250"
                style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;">
            <font>
                <Font size="14"/>
            </font>
        </Button>

        <Hyperlink text="Hai giÃ  un account? Accedi" onAction="#showLoginPane"
                   style="-fx-text-fill: #1DB954;"/>
    </VBox>

    <Region VBox.vgrow="ALWAYS"/>

    <!-- Exit Button -->
    <Button text="Esci" onAction="#handleExit" prefWidth="100"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

</VBox>
