<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.client.FriendRequestsController"
            style="-fx-background-color: #121212;">

    <top>
        <VBox style="-fx-background-color: #3498db; -fx-padding: 20;">
            <Label text="ðŸ“¬ Richieste di Amicizia"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Gestisci le richieste di amicizia ricevute"
                   style="-fx-font-size: 14px; -fx-text-fill: #f0f0f0;">
                <VBox.margin>
                    <Insets top="5"/>
