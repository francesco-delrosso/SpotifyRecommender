<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.client.FavoriteController"
            style="-fx-background-color: #121212;">

    <!-- Header -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #1DB954; -fx-padding: 20;">
            <Label text="❤️ Favorites"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="userEmailLabel" style="-fx-text-fill: white; -fx-font-size: 13px;"/>
            <Button text="⬅ Back to Home"
                    onAction="#handleBackToHome"
                    style="-fx-background-color: white;
                           -fx-text-fill: #1DB954;
                           -fx-font-weight: bold;
                           -fx-background-radius: 20;
                           -fx-padding: 8 20;
                           -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Table -->
    <center>
        <VBox spacing="15" style="-fx-padding: 30;">
            <TableView fx:id="favoriteTable"
                       style="-fx-background-color: #181818;
                             -fx-control-inner-background: #181818;
                             -fx-table-cell-border-color: transparent;
                             -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="titleColumn" text="🎵 Title" prefWidth="250"/>
                    <TableColumn fx:id="artistColumn" text="🎤 Artist" prefWidth="200"/>
                    <TableColumn fx:id="popularityColumn" text="⭐ Popularity" prefWidth="150"/>
                    <TableColumn fx:id="favoriteColumn" text="❤️" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
